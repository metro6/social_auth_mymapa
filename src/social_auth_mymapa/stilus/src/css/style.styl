body
  font-family Circle-rounded, sans-serif
  margin 0

*, ::after, ::before
  box-sizing border-box

body
  background #0d5aa7
  .container
    max-width 1440px
    margin 0 auto
    .block-login-container
      display flex
      width 400px
      margin 0 auto
      height 100%
      align-items center
      .block-login
        display flex
        flex-direction column
        background white
        border 1px solid grey
        border-radius 5px
        width 100%
        padding 20px
        .block-social-auth
          display flex
          flex-direction column
          text-align center
          width 100%
          p
            font-size 14px
            text-transform uppercase
          .social-links
            display flex
            flex-direction row
            align-items center
            justify-content space-between
        .block-or
          overflow hidden
          text-align center
          display flex
          align-items center
          margin 20px 0
          &:before, &:after
            content ''
            display inline-block
            vertical-align middle
            box-sizing border-box
            width 100%
            height 1px
            background grey
            border: solid #fff;
          &:before
            border-width: 0 10px 0 0;
          &:after
            border-width 0 0 0 10px
        .block-login-form, .block-bottom-login
          display flex
          form
            input
              width 100%
              margin-top 10px
              border 1px solid grey
              border-radius 5px
              padding 5px 10px
              &:placeholder
                font-size 12px
            button
              background green
              border 0px
              border-radius 5px
              color white
              width 100%
              padding  10px
              margin-top 10px
              &:hover
                cursor pointer





  footer
    margin 0 auto
    text-align center